{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "./",
    // エイリアス設定
    "paths": {
      "@images/*": ["src/images/*"],
      "@components/*": ["src/components/*"]
    },
    "outDir": "./dist/",
    "target": "ES5", // TSはECMAScript 5に変換
    "module": "ES2015", // TSのモジュールはES Modulesとして出力
    "jsx": "react", // JSXの書式を有効に設定
    "moduleResolution": "node",
    "lib": ["ES2015", "DOM"],
    "esModuleInterop": true
  }
}
